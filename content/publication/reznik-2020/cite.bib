 journal = {Physical Review Research},
 month = {April},
 number = {2},
 pages = {023004},
 publisher = {American Physical Society},
 title = {Footprints of quantum pigeons},
 url = {https://link.aps.org/doi/10.1103/PhysRevResearch.2.023004},
 volume = {2},
 year = {2020}
}

